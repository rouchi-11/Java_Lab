import java.util.Scanner;

public class Bank_array {
    private String name;
    private double balance;

    
    public Bank_array(String name, double balance) {
        this.name = name;
        this.balance = balance;
    }

    
    public double getBalance() {
        return balance;
    }

  
    public String getName() {
        return name;
    }

    
    public void setBalance(double balance) {
        this.balance = balance;
    }

   
    public void setName(String name) {
        this.name = name;
    }

    
    public void deposit(double amt) {
        if (amt > 0) {
            balance += amt;
        } else {
            System.out.println("Deposit amount must be positive.");
        }
    }

   
    public boolean withdraw(double amt) {
        if (amt > 0 && amt <= balance) {
            balance -= amt;
            return true;
        } else {
            return false;
        }
    }

    
    public void manageAccount() {
        Scanner sc = new Scanner(System.in);
        boolean exit = false;

        while (!exit) {
            System.out.println("Choose an option: 1. Deposit  2. Withdraw  3. Exit");
            int choice = sc.nextInt();

            if (choice == 1) {
                System.out.println("Enter amount to deposit:");
                double depositAmount = sc.nextDouble();
                deposit(depositAmount);
                System.out.println("New Balance: " + getBalance());

            } else if (choice == 2) {
                System.out.println("Enter amount to withdraw:");
                double withdrawAmount = sc.nextDouble();
                if (withdraw(withdrawAmount)) {
                    System.out.println("New Balance: " + getBalance());
                } else {
                    System.out.println("Insufficient funds.");
                }

            } else if (choice == 3) {
                exit = true;

            } else {
                System.out.println("Invalid option. Please try again.");
            }
        }
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        
        System.out.println("Enter the number of customers:");
        int numberOfCustomers = sc.nextInt();
        sc.nextLine(); // Consume the newline

        
        Bank[] customers = new Bank[numberOfCustomers];

        
        for (int i = 0; i < numberOfCustomers; i++) {
            System.out.println("Enter the name of customer " + (i + 1) + ":");
            String name = sc.nextLine();

            System.out.println("Enter the initial balance of customer " + (i + 1) + ":");
            double balance = sc.nextDouble();
            sc.nextLine(); // Consume the newline

            
            customers[i] = new Bank(name, balance);
        }

        boolean exit = false;
        while (!exit) {
            
            System.out.println("Enter the name of the customer you want to manage:");
            String customerName = sc.nextLine();
            Bank selectedCustomer = null;

           
            for (Bank customer : customers) {
                if (customer.getName().equalsIgnoreCase(customerName)) {
                    selectedCustomer = customer;
                    break;
                }
            }

            if (selectedCustomer != null) {
               
                selectedCustomer.manageAccount();
            } else {
                System.out.println("Customer not found. Please try again.");
            }

          
            System.out.println("Do you want to manage another customer? (yes/no)");
            String response = sc.nextLine().toLowerCase();
            if (response.equals("no")) {
                exit = true;
            }
        }
    }
}
